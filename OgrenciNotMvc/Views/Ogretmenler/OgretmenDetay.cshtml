@model OgrenciNotMvc.Models.EntitiyFramework.TBLOGRETMENLER
@{
    ViewBag.Title = "OgretmenGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="alert alert-info" role="alert">
        <strong>Öğretmen Detay</strong>
    </div>

@using (Html.BeginForm("Guncelle", "Ogretmenler", FormMethod.Post))
{
    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(m => m.OGRETMENAD)
        @Html.TextBoxFor(m => m.OGRETMENAD, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(m => m.OGRETMENSOYAD)
        @Html.TextBoxFor(m => m.OGRETMENSOYAD, new { @class = "form-control" })
    </div>
    <div class="form-group" style="margin-top:10px">
        @Html.LabelFor(m => m.OGRETMENBRANS)
        @Html.TextBoxFor(m => m.OGRETMENBRANS, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.OGRETMENID)
    <div style="margin-top:10px">
        <button class="btn btn-info">Güncelle</button>
    </div>
}
